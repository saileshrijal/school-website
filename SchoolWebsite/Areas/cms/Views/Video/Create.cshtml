@model CreateVideoVm
@{
    ViewData["Title"] = "Create Video";
}

<div class="main_content_iner ">
    <div class="container-fluid p-0">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="white_card card_height_100 mb_30">
                    <div class="white_card_header">
                        <div class="box_header m-0">
                            <div class="main-title">
                                <h3 class="m-0">Add New Video</h3>
                            </div>
                        </div>
                    </div>
                    <div class="white_card_body">
                        <div class="card-body">
                            <form asp-action="Create">
                                <div class="row">
                                    <div class="mb-3">
                                        <label class="form-label" for="Name">Video Name<span
                                                class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="Name" placeholder="Video Name"
                                            required asp-for="Name">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="VideoUrl">Video Url<span
                                                class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="Name" placeholder="Video Url"
                                            required asp-for="VideoUrl">
                                        <span asp-validation-for="VideoUrl" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="Description">Description</label>
                                        <textarea rows="10" class="form-control" id="Name" placeholder="Description"
                                             asp-for="Description"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Save</button>
                                <a asp-action="Index" class="btn btn-warning">Go Back</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}