@model OrganizationVm
@{
    ViewData["Title"] = "Organization Profile";
    var imageUrl = Model.LogoUrl == null ? "/admin/default-img/profile.jpg" : "/uploads/organization/" + Model.LogoUrl;
}

<div class="main_content_iner ">
    <div class="container-fluid p-0">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="white_card card_height_100 mb_30">
                    <div class="white_card_header">
                        <div class="box_header m-0">
                            <div class="main-title">
                                <h3 class="m-0">Organization Profile</h3>
                            </div>
                        </div>
                    </div>
                    <div class="white_card_body">
                        <div class="card-body">
                            <form asp-action="Profile" enctype="multipart/form-data">
                                <input type="hidden" asp-for="Id" />
                                <div class="row">
                                    <div class="col-md-6 col-sm-12">
                                        <div class="mb-3">
                                            <label class="form-label" for="Name">Organization Name</label>
                                            <input type="text" class="form-control" id="Name"
                                                placeholder="Organization Name" asp-for="Name">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="ShortName">Short Name</label>
                                            <input type="text" class="form-control" id="ShortName"
                                                placeholder="Short Name" asp-for="ShortName">
                                            <span asp-validation-for="ShortName" class="text-danger"></span>

                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="Address">Address</label>
                                            <input type="text" class="form-control" id="Address" placeholder="Address"
                                                asp-for="Address">
                                            <span asp-validation-for="Address" class="text-danger"></span>

                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="Phone">Phone Number</label>
                                            <input type="text" class="form-control" id="Phone"
                                                placeholder="Phone Number" asp-for="Phone">
                                            <span asp-validation-for="Phone" class="text-danger"></span>

                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="Email">Email</label>
                                            <input type="email" class="form-control" id="Email" placeholder="Email"
                                                asp-for="Email">
                                            <span asp-validation-for="Email" class="text-danger"></span>

                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="ContactPerson">Contact Person</label>
                                            <input type="text" class="form-control" id="ContactPerson"
                                                placeholder="Contact Person" asp-for="ContactPerson">
                                            <span asp-validation-for="ContactPerson" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="FacebookUrl">Facebook Url</label>
                                            <input type="text" class="form-control" id="FacebookUrl"
                                                placeholder="Facebook Url" asp-for="FacebookUrl">
                                            <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="TwitterUrl">Twitter Url</label>
                                            <input type="text" class="form-control" id="TwitterUrl"
                                                placeholder="Twitter Url" asp-for="TwitterUrl">
                                            <span asp-validation-for="TwitterUrl" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="InstagramUrl">Instagram Url</label>
                                            <input type="text" class="form-control" id="InstagramUrl"
                                                placeholder="Instagram Url" asp-for="InstagramUrl">
                                            <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="YoutubeUrl">Youtube Url</label>
                                            <input type="text" class="form-control" id="YoutubeUrl"
                                                placeholder="Youtube Url" asp-for="YoutubeUrl">
                                            <span asp-validation-for="YoutubeUrl" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="mb-3">
                                            <img src="@imageUrl" height="313" width="313" id="img-preview">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="img-input">Organization Logo</label>
                                            <input type="file" accept="image/jpg" class="form-control" id="img-input"
                                                asp-for="Logo">
                                            <span asp-validation-for="Logo" class="text-danger"></span>

                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="Email">Email Address</label>
                                            <input type="email" class="form-control" id="Email"
                                                placeholder="Email Address" asp-for="Email">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="PanNumber">Pan Number</label>
                                            <input type="text" class="form-control" id="PanNumber"
                                                placeholder="Pan Number" asp-for="PanNumber">
                                            <span asp-validation-for="PanNumber" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="Description">Organization Description</label>
                                            <textarea id="Description" rows="8" asp-for="Description" class="form-control"></textarea>
                                            <span asp-validation-for="PanNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Save</button>
                                @* go back with javascript history *@
                                <button type="button" class="btn btn-warning" onclick="window.history.back();">Go
                                    Back</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @* preview image *@
    <script>
        $(document).ready(function () {
            $("#img-input").change(function () {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $("#img-preview").attr('src', e.target.result);
                }
                reader.readAsDataURL(this.files[0]);
            });
        });
    </script>
}