@model ResetPasswordVm
@{
    ViewData["Title"] = "Reset Password";
}

<div class="main_content_iner ">
    <div class="container-fluid p-0">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="white_card card_height_100 mb_30">
                    <div class="white_card_header">
                        <div class="box_header m-0">
                            <div class="main-title">
                                <h3 class="m-0">Reset Password</h3>
                            </div>
                        </div>
                    </div>
                    <div class="white_card_body">
                        <div class="card-body">
                            <form asp-action="ResetPassword">
                                <input type="hidden" asp-for="UserId">
                                <div class="mb-3">
                                    <label class="form-label" for="NewPassword">New Password</label>
                                    <input type="password" class="form-control" id="NewPassword" placeholder="New Password"
                                        required asp-for="NewPassword">
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="ConfirmPassword">Confirm Password</label>
                                    <input type="password" id="ConfirmPassword" class="form-control" placeholder="Confirm Password" required asp-for="ConfirmPassword">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary">Save</button>
                                <a asp-action="Index" class="btn btn-warning">Go Back</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}