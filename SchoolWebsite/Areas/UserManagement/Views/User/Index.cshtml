@model List<UserVm>
@{
    ViewData["Title"] = "Users";
}

<div class="main_content_iner ">
    <div class="container-fluid p-0">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="white_card card_height_100 mb_30">
                    <div class="white_card_header">
                        <div class="box_header m-0">
                            <div class="main-title">
                                <h3 class="m-0">Users</h3>
                            </div>
                        </div>
                    </div>
                    <div class="white_card_body">
                        <div class="QA_section">
                            <div class="white_box_tittle list_header">
                                <h4>List of Users</h4>
                                <div class="box_right d-flex lms_block">
                                    <div class="serach_field_2">
                                        <div class="search_inner">
                                            <form Active="#">
                                                <div class="search_field">
                                                    <input type="text" placeholder="Search content here...">
                                                </div>
                                                <button type="submit"> <i class="ti-search"></i> </button>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="add_button ms-2">
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Create"
                                            class="btn_1">Add
                                            New</a>
                                    </div>
                                </div>
                            </div>
                            <div class="QA_table mb_30">

                                <table class="table lms_table_active3">
                                    <thead>
                                        <tr>
                                            <th scope="col">Image</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Full Name</th>
                                            <th scope="col">UserName</th>
                                            <th scope="col">Temporary Address</th>
                                            <th scope="col">Created Date</th>
                                            <th scope="col">Role</th>
                                            <th scope="col">Status</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <img src="~/admin/default-img/profile.jpg"
                                                        class="img-fluid rounded-circle" height="50" width="50">
                                                </td>
                                                <td>@item.Email</td>
                                                <td>@item.FullName</td>
                                                <td>@item.UserName</td>
                                                <td>@item.TemporaryAddress</td>
                                                <td>@item.CreatedDate</td>
                                                <td>
                                                    <span class="px-2 py-1 rounded-2 bg-dark text-white">@item.Role</span>
                                                </td>
                                                <td>
                                                    <span
                                                        class='px-2 py-1 rounded-2 @(item.Status?"bg-success text-dark":"bg-danger text-white")'>@(item.Status
                                                    ? "Active" : "In Active")</span>
                                                </td>
                                                <td>
                                                    <div class="dropstart">
                                                        <button type="button" class="btn btn-primary "
                                                            data-bs-toggle="dropdown" aria-expanded="false">
                                                            <i class="fa fa-shield"></i>
                                                        </button>
                                                        <ul class="dropdown-menu">
                                                            <li><a class="dropdown-item" href="#"><i class="fa fa-edit"></i>
                                                                    Edit</a></li>
                                                            <li><a class="dropdown-item" href="#"><i
                                                                        class="fa fa-trash"></i> Delete</a></li>
                                                            <li><a class="dropdown-item" href="#"><i class="fa fa-key"></i>
                                                                    Change Password</a></li>
                                                            <li><a class="dropdown-item" href="#"><i
                                                                        class="fa fa-thumbs-down"></i> Disabled</a></li>
                                                        </ul>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>